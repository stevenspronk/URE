<mvc:View xmlns:mvc="MVC.CreateTest" xmlns:sap.ui.core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.layout="sap.ui.layout" xmlns="sap.m" controllerName="MVC.CreateTest" height="100%">
	<Page class="sapUiContentPadding" id="createTestView" showNavButton="false" title="URE Racing: Nieuwe test">
		<content>
			<sap.ui.layout:VerticalLayout class="sapUiContentPadding" width="100%">
				<sap.ui.layout.form:SimpleForm id="metaform" editable="true" layout="ResponsiveGridLayout">
					<sap.ui.layout.form:content>
						<sap.ui.core:Title id="__title0" text="Algemene gegevens"/>
						<Label id="__label0" text="Race ID"/>
						<Input id="Race_Id" width="100%" editable="false" value="{RaceMetaData>/RACE_ID}"/>
						<Label id="label_run_id" text="Run ID"/>
						<Input id="Run_Id" width="100%" editable="false" value="{RaceMetaData>/RUN_ID}"/>
						<Label id="__label13" text="Race omschrijving"/>
						<Input id="Input_Race_Description" value="{ path : 'RaceMetaData>/RACE_DESCRIPTION', type : 'sap.ui.model.type.String', constraints : { minLength : 3, maxLength : 10 } }" width="100%"/>
						<Label id="__label1" text="Circuit"/>
						<Input id="Input_Circuit" width="100%" value="{ path : 'RaceMetaData>/CIRCUIT', type : 'sap.ui.model.type.String', constraints : { minLength : 2, maxLength : 50 } }"/>
						<Label id="__label2" text="Test type"/>
						<!--<ComboBox id="Input_RaceType" selectedItem="Element sap.ui.core.ListItem#__item1" selectedItemId="test1" selectedKey="1" value="Endurance">-->
						<ComboBox id="Input_RaceType" value="{ path : 'RaceMetaData>/RACE_TYPE', type : 'sap.ui.model.type.String', constraints : { minLength : 1} }" width="50%">
							<items>
								<sap.ui.core:ListItem id="test1" key="1" text="Endurance"/>
								<sap.ui.core:ListItem id="test2" key="2" text="Skidpad"/>
								<sap.ui.core:ListItem id="test3" key="3" text="Acceleration"/>
								<sap.ui.core:ListItem id="test4" key="4" text="Autocross"/>
								<sap.ui.core:ListItem id="test5" key="5" text="Other"/>
							</items>
						</ComboBox>
						<!-- <Label text="Datum" id="__label3"/>
		        	
			    <DatePicker width="50%" id="__picker0"/>
	-->
						<Label id="__label4" text="Weersomstandigheden"/>
						<ComboBox id="Input_Weather" value="{ path : 'RaceMetaData>/WEATHER', type : 'sap.ui.model.type.String', constraints : { minLength : 1} }" width="50%">
							<items>
								<sap.ui.core:ListItem id="weather1" key="1" text="Zonnig"/>
								<sap.ui.core:ListItem id="weather2" key="2" text="Regenachtig"/>
							</items>
						</ComboBox>
						<Label id="TempBox" text="Temperatuur"/>
						<ComboBox id="Input_Temperature" value="{ path : 'RaceMetaData>/TEMPERATURE', type : 'sap.ui.model.type.String', constraints : { minLength : 1} }" width="50%">
							<items>
								<sap.ui.core:ListItem id="temp1" key="1" text="-5"/>
								<sap.ui.core:ListItem id="temp2" key="2" text="0"/>
								<sap.ui.core:ListItem id="temp3" key="3" text="5"/>
								<sap.ui.core:ListItem id="temp4" key="4" text="10"/>
								<sap.ui.core:ListItem id="temp5" key="5" text="15"/>
								<sap.ui.core:ListItem id="temp6" key="6" text="20"/>
								<sap.ui.core:ListItem id="temp7" key="7" text="25"/>
								<sap.ui.core:ListItem id="temp8" key="8" text="30"/>
								<sap.ui.core:ListItem id="temp9" key="9" text="35"/>
								<sap.ui.core:ListItem id="temp10" key="10" text="40"/>
							</items>
						</ComboBox>
						<Label id="Label_Notes" text="Notities"/>
						<TextArea id="Input_Notes" wrapping="None" value="{ path : 'RaceMetaData>/NOTES', type : 'sap.ui.model.type.String' }"/>
					</sap.ui.layout.form:content>
				</sap.ui.layout.form:SimpleForm>
				<sap.ui.layout.form:SimpleForm editable="true" layout="ResponsiveGridLayout">
					<sap.ui.layout.form:content>
						<sap.ui.core:Title id="__title1" text="Technische gegevens auto"/>
						<Label id="__label5" text="Car ID"/>
						<Input id="Input_CarID" width="100%" value="{ path : 'RaceMetaData>/CAR_ID', type : 'sap.ui.model.type.String', constraints : { minLength : 1, maxLength : 20 } }"/>
						<Label id="auto_notities_label" text="Notities"/>
						<TextArea id="Input_CarNotes" wrapping="None" value="{ path : 'RaceMetaData>/CAR_NOTES', type : 'sap.ui.model.type.String' }"/>
					</sap.ui.layout.form:content>
				</sap.ui.layout.form:SimpleForm>
				<sap.ui.layout.form:SimpleForm editable="true" layout="ResponsiveGridLayout">
					<sap.ui.layout.form:content>
						<sap.ui.core:Title id="__title2" text="Gegevens coureur"/>
						<Label id="__label9" text="Naam"/>
						<Input id="Input_DriverName" width="100%" value="{ path : 'RaceMetaData>/NAME_DRIVER', type : 'sap.ui.model.type.String', constraints : { minLength : 2, maxLength : 20 } }"/>
						<!--<Label id="__label10" text="Leeftijd"/>
						<Input id="__input10" width="100%"/>
						-->
						<Label id="__label11" text="Lengte in CM" width="100%"/>
						<Input id="Input_DriverLength" width="10%" value="{ path : 'RaceMetaData>/LENGTH_DRIVER', type : 'sap.ui.model.type.Integer', constraints : { minLength : 3, maxLength : 3 } }"/>
						<Label id="__label12" text="Gewicht in KG" width="100%"/>
						<Input id="Input_DriverWeight" width="10%" value="{ path : 'RaceMetaData>/WEIGHT_DRIVER', type : 'sap.ui.model.type.Integer', constraints : { minLength : 2, maxLength : 3 } }"/>
						<Label id="coureur_notities_label" text="Notities"/>
						<TextArea id="Input_DriverNotes" wrapping="None"/>
					</sap.ui.layout.form:content>
				</sap.ui.layout.form:SimpleForm>
			</sap.ui.layout:VerticalLayout>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Button text="History" width="100px" id="__button1" press="goToHistory" align="left"/>
					<Button text="Clear" width="100px" id="__button2" press="clearEntries"/>
				</content>
				<ToolbarSpacer/>
				<Button activeIcon="sap-icon://accept" icon="sap-icon://accept" press="saveTest" text="Start test"/>
				<!--<Button activeIcon="sap-icon://begin" icon="sap-icon://begin" press="doorStart" text="Doorstart"/>-->
			</Toolbar>
		</footer>
	</Page>
</mvc:View>