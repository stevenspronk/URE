<mvc:View xmlns:mvc="MVC.Powertrain" xmlns="sap.suite.ui.commons" xmlns:m="sap.m" xmlns:sap.ui.core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.layout="sap.ui.layout" height="100%" controllerName="MVC.Powertrain">
	<m:Panel>
		<m:Toolbar 
			width="100%">
				<m:CheckBox id="idCheckBox" 
				text="Show All in Filter"
				width="120px" 
				selected="true"
				select="onSelect" />
		</m:Toolbar>
		<Timeline 
			id="idTimeline"
		 	enableBackendFilter="true" 
		 	growing="true"
			growingThreshold="3" 
			enableScroll="true"
			showHeaderBar="true" 
		 	width="100%"
		 	showIcons="false"
			content="{/Invoices}"
		 	filterList="{/Customers}">
				<content>
					<TimelineItem 
						id="idTimelineItem" 
						dateTime="{OrderDate}"
						userName="{CustomerID}" 
						title="{CustomerName}" 
						icon="sap-icon://activity-items"
						text="{ProductName}">
					</TimelineItem>
				</content>
				<filterList>
					<TimelineFilterListItem 
					id="idTimelineFilterListItem"
					key="{CustomerID}" 
					text="{CompanyName}">
					</TimelineFilterListItem>
				</filterList>
		</Timeline>		 
	</m:Panel>
</mvc:View>